<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            targetNamespace="http://wso2.org/bps/analytics/config"
            xmlns:tns="http://wso2.org/bps/analytics/config"
            elementFormDefault="qualified">
    <xsd:element name="BPSAnalytics" type="tns:tBPSAnalytics"/>
    <xsd:complexType name="tBPSAnalytics">
        <xsd:sequence>
            <xsd:element name="AnalyticServer" type="tns:tAnalyticServer"/>
            <xsd:element name="BPMN" type="tns:tBPMN"/>
        </xsd:sequence>
    </xsd:complexType>
    <xsd:complexType name="tAnalyticServer">
        <xsd:sequence>
            <xsd:element name="ReceiverURLSet" type="xsd:string"/>
            <xsd:element name="AuthURLSet" type="xsd:string"/>
            <xsd:element name="Username" type="xsd:string"/>
            <xsd:element name="Password" type="xsd:string"/>
        </xsd:sequence>
    </xsd:complexType>
    <xsd:complexType name="tBPMN">
        <xsd:sequence>
            <xsd:element name="PublisherType" type="xsd:string" minOccurs="0" maxOccurs="1"/>
            <xsd:element name="DataPublishingEnabled" type="xsd:boolean"/>
            <xsd:element name="KPIDataPublishingEnabled" type="xsd:boolean"/>
            <xsd:element name="AsyncDataPublishingEnabled" type="xsd:boolean"/>
        </xsd:sequence>
    </xsd:complexType>
</xsd:schema>